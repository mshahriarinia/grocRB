-# edit.html.haml using partial

%h1 Edit Existing bargain

= form_tag bargain_path(@bargain), :method => :put do
  - if @bargain.errors.any?
    %div#validation_error
      %b Errors
      %ul
        -@bargain.errors.full_messages.each do |e|
          %li 
            = e

  = label :bargain, :price, 'Price'
  = text_field :bargain, 'price'

  = label :bargain, :store_id, 'Store'
  = select :bargain, :store_id, options_for_select(Store.all.map{|s|[s.name, s.id]})


  = label :bargain, :user_id, 'User'
  = select :bargain, :user_id, options_for_select(User.all.map{|s|[s.email, s.id]})

  = label :bargain, :product_type, 'Product Type'
  = select :bargain, :product_type_id, options_for_select(ProductType.all.map{|s|[s.name, s.id]})
  

  = label :bargain, :description, 'Description'
  = text_area :bargain, 'description'

  = submit_tag 'Save Changes'
